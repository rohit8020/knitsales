<%- include('../partials/header'); -%>

<div class="container">
    <h1 style="text-align: center; color: aliceblue;">Create a New Product</h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/products" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="file" name="image"  required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min="0.1" step="0.1"  required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/products">Go Back</a>
    </div>
    

</div>

<%- include('../partials/footer'); -%>