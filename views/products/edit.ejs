<%- include('../partials/header'); -%>


<div class="container">
    <h1 style="text-align: center; color: whitesmoke;">Edit <%= product.name %></h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/products/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text"  name="name" value="<%= product.name %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="file" name="image"  value="<%= product.image %>" >
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" value="<%= product.price %>" min="0.1" step="0.1" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= product.description %>" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit!</button>
            </div>
        </form>
        <a href="/products">Go Back</a>
    </div>
    

</div>

<%- include('../partials/footer'); -%>