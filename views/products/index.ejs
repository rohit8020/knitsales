<%- include('../partials/header'); -%>

<div class="container">
    <div class="products">
        <% products.forEach(function(product){ %>
            <div class="product">
                <div class="image"><img src="/<%= product.image %>"></div>
                <div class="caption"><h4><%= product.name %></h4></div>
                <a class="btn" href="/products/<%= product._id %>">
                    More Info
                </a>
            </div>
        <% }); %>
    </div>
</div>


<%- include("../partials/footer"); -%>

